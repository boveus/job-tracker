<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<br />
  <%= f.label :description %>
  <%= f.text_field :description %>
<br />
  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>
<br />
  <%= f.label :city %>
  <%= f.text_field :city %>
<br />
  <%= f.label :category %>
  <%= f.collection_select :category, Category.all, :title, :title %>
<br />
  <%= f.submit %>
<% end %>
<br />
<%= link_to "Create New Category", new_category_path %>
